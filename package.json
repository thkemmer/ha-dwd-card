{
  "name": "ha-dwd-card",
  "version": "1.0.0",
  "type": "module",
  "description": "A custom Home Assistant card for DWD Weather Warnings",
  "main": "dist/ha-dwd-card.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "NODE_OPTIONS='--no-deprecation' vitest run",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "echo 'Local preview: http://localhost:8000/demo/' && python3 -m http.server 8000"
  },
  "author": "Mact",
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "globals": "^17.0.0",
    "home-assistant-js-websocket": "^9.1.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "rollup": "^4.9.6",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
